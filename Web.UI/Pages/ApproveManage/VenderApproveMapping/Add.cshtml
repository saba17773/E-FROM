    ViewData["Breadcrumb"] = new List<BreadcrumbModel> {
        new BreadcrumbModel { Text = "Approve Manage", Link = "javascript:void();" },
        new BreadcrumbModel { Text = "Mapping", Link = "/ApproveManage/VenderApproveMapping" },
        new BreadcrumbModel { Text = "Add" }
    };
}
<div class="d-flex justify-content-between align-items-center my-3">
    <h1>Add New Mapping</h1>
</div>
<div class="row">
    <div class="col-lg-6 col-md-12 col-sm-12">
        <form method="post">
            <div class="form-group">
                <label> Plant : </label>&nbsp;&nbsp;
