<div class="modal" id="modalEmployee" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="table-responsive">
                        <table id="gridEmployee" class="table table-hover"></table>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {

            var gridEmployee = "#gridEmployee";

            $("#CreditControl_DOM_TermOfPayment").select2({ filter: true });

            $("#Address1_Province").select2({ filter: true });
            $("#Address1_District").select2({ filter: true });
            $("#Address1_SubDistrict").select2({ filter: true });

            $("#Address2_Province").select2({ filter: true });
            $("#Address2_District").select2({ filter: true });
            $("#Address2_SubDistrict").select2({ filter: true });

            $("#CreditControl_DOM_TypeOfBusiness").select2({ filter: true });
            $("#CreditControl_DOM_TypeOfProduct").select2({ filter: true });

            $("#CreditControl_DOM_TermOfPayment").select2({ filter: true });

            $("#CreditControl_DOM_GuaranteeDOM_IssueDate").datepicker();
            $("#CreditControl_DOM_GuaranteeDOM_ExpireDate").datepicker();

            $("#Address1_Province").on("change", function () {
                var provinceId = $("#Address1_Province").val();

                $.ajax({
                    url: "/CreditControl/AddDOM?handler=DistrictByProvince&provinceId=" + provinceId,
                    type: "get"
                }).done(function (data) {
                    //console.log(data);

                    $("#Address1_District").html("<option value=''>--- เลือกรายการ ---</option>");
                    $("#Address1_SubDistrict").html("<option value=''>--- เลือกรายการ ---</option>");

                    $.each(data, function (i, v) {
                        $("#Address1_District").append("<option value='" + v.id + "'>" + v.nameInThai + "</option>");
                    });
                });
            });

            $("#Address2_Province").on("change", function () {
                var provinceId = $("#Address2_Province").val();

                $.ajax({
                    url: "/CreditControl/AddDOM?handler=DistrictByProvince&provinceId=" + provinceId,
                    type: "get"
                }).done(function (data) {
                    //console.log(data);

                    $("#Address2_District").html("<option value=''>--- เลือกรายการ ---</option>");
                    $("#Address2_SubDistrict").html("<option value=''>--- เลือกรายการ ---</option>");

                    $.each(data, function (i, v) {
                        $("#Address2_District").append("<option value='" + v.id + "'>" + v.nameInThai + "</option>");
                    });
                });
            });

            $("#Address1_District").on("change", function () {
                var districtId = $("#Address1_District").val();

                $.ajax({
                    url: "/CreditControl/AddDOM?handler=SubDistrictByProvince&districtId=" + districtId,
                    type: "get"
                }).done(function (data) {
                    //console.log(data);

                    $("#Address1_SubDistrict").html("");

                    $.each(data, function (i, v) {
                        $("#Address1_SubDistrict").append("<option value='" + v.id + "'>" + v.nameInThai + "</option>");
                    });
                });
            });

            $("#Address2_District").on("change", function () {
                var districtId = $("#Address2_District").val();

                $.ajax({
                    url: "/CreditControl/AddDOM?handler=SubDistrictByProvince&districtId=" + districtId,
                    type: "get"
                }).done(function (data) {
                    //console.log(data);

                    $("#Address2_SubDistrict").html("");

                    $.each(data, function (i, v) {
                        $("#Address2_SubDistrict").append("<option value='" + v.id + "'>" + v.nameInThai + "</option>");
                    });
                });
            });

            $("#selectEmployee").on("click", function () {
                $("#modalEmployee").modal({ backdrop: "static" });
            });


            var dtEmployee = $(gridEmployee).DataTable({
                serverSide: true,
                processing: true,
                destroy: true,
                responsive: false,
                ajax: {
                    url: "/CreditControl/AddDOM?handler=EmployeeGrid",
                    type: "post",
                    headers: {
                        "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                    }
                },
                initComplete: function () {
                    $('.dataTables_filter input').unbind();
                    $('.dataTables_filter input').on("keyup", function (e) {
                        if (e.keyCode == 13) {
                            dtEmployee.search($(this).val()).draw();
                        }
                    });
                },
                columns: [
                    { title: "Employee Id", data: "employeeId" },
                    { title: "Name", data: "name" },
                    { title: "Last Name", data: "lastName" },
                    { title: "Name Eng", data: "nameEng" },
                    { title: "Company", data: "company" },
                    { title: "Position", data: "positionName" },
                    { title: "Division", data: "divisionName" },
                    { title: "Department", data: "departmentName" },
                    { title: "Old Employee Id", data: "employeeIdOld" },
                    { title: "Email", data: "email" }
                ],
                columnDefs: [
                    {
                        targets: 0,
                        render: function (data, type, row) {
                            var _name = row.name + " " + row.lastName;
                            return data + "<div class='mt-2'><span style='cursor: pointer;' class='badge badge-secondary' onclick='selectEmp(" + row.employeeId + ", \"" + _name + "\")'>เลือก</span></div>";
                        }
                    }
                ],
            });

            $("body").on("keypress", function (e) {
                if (e.which === 13) e.preventDefault();
            });


            $("#CreditControl_DOM_TermOfPayment").on("change", function () {

                $.ajax({
                    url: "/CreditControl/AddDOM?handler=PaymentType",
                    type: "get",
                    data: {
                        termId: $("#CreditControl_DOM_TermOfPayment").val()
                    }
                }).done(function (data) {

                    var _type = data.uploadType;

                    $("input[name=FileUploadType]").val(_type);

                    var type1 = [4, 5, 6, 8, 9, 11, 12, 13];
                    var type2 = [4, 5, 6, 7, 8, 9, 11, 12, 13, 14];

                    if (_type === 0) {
                        $("input[type=file]").show();
                    } else if (_type === 1) {
                        $("input[type=file]").hide();
                        $.each(type1, function (i, v) {
                            $("input[name=UploadFile_" + v + "]").show();
                        });
                    } else if (_type === 2) {
                        $("input[type=file]").hide();
                        $.each(type2, function (i, v) {
                            $("input[name=UploadFile_" + v + "]").show();
                        });
                    }
                });
            });
        });

        function selectEmp(empid, name) {
            $("input[name=SaleEmployeeId]").val(empid);
            $("input[name=SaleName]").val(name);
            $("#modalEmployee").modal("hide");
        }
    </script>
}

