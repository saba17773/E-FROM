@page "/CreditControl/{id}/EditDOM"
@model Web.UI.Pages.CreditControl.EditDOMModel

@using Infrastructure.Models
@using Web.UI.Infrastructure.Entities

@{
    ViewData["Title"] = "Edit DOM";

    ViewData["Breadcrumb"] = new List<BreadcrumbModel> {
        new BreadcrumbModel { Text = "E-Form", Link = "javascript:void();" },
        new BreadcrumbModel { Text = "Credit Control", Link = "/CreditControl" },
        new BreadcrumbModel { Text = "Edit DOM" }
    };
}

<div class="card">
    <div class="card-header">Edit Credit Control (DOM)</div>
    <div class="card-body">

        <div class="text-danger" asp-validation-summary="All"></div>

        <form method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.RequestNumber">เลขที่คำขอ</label>
                        <input type="text" asp-for="CreditControl_DOM.RequestNumber" class="form-control" readonly />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.RequestNumber"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.RequestDate">วันที่</label>
                        <input type="text" asp-for="CreditControl_DOM.RequestDate" class="form-control" readonly />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.RequestDate"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.CustomerCode">เลขทะเบียนลูกค้า</label>
                        <input type="text" asp-for="CreditControl_DOM.CustomerCode" class="form-control" readonly />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.CustomerCode"></span>
                    </div>
                </div>
            </div>

            <div class="h3 my-3">รายละเอียดทั่วไปเกี่ยวกับลูกค้า</div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.TypeOfBusiness">ลักษณะของกิจการ <span class="text-danger font-weight-bold">*</span></label>
                        <select asp-for="CreditControl_DOM.TypeOfBusiness" asp-items="Model.CustomerTypeMaster" class="form-control">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.TypeOfBusiness"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.TypeOfProduct">ประเภทกลุ่มลูกค้าในระบบ (Type of Customer Group) <span class="text-danger font-weight-bold">*</span></label>

                        <table width="100%">
                            @foreach (var item in Model.CustomerTypeTrans)
                            {
                                <tr>
                                    <td>
                                        <label>
                                            @if ((int)item.CustomerByProductId == 0)
                                            {
                                                <input type="checkbox" name="TypeOfCustomer" value="@item.Id" /> @item.ByName
                                            }
                                            else
                                            {
                                                <input type="checkbox" name="TypeOfCustomer" value="@item.Id" checked /> @item.ByName
                                            }
                                        </label>
                                    </td>
                                    <td>
                                        <input type="text" value="@item.CustomerCode" readonly />
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>

            <div class="h3 my-3">ชื่อจดทะเบียนประกอบการ</div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.CompanyName">ชื่อบริษัท <span class="text-danger font-weight-bold">*</span></label>
                        <input type="text" asp-for="CreditControl_DOM.CompanyName" class="form-control" />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.CompanyName"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.IsHeadQuarter">Company Type <span class="text-danger font-weight-bold">*</span></label>
                        <select asp-for="CreditControl_DOM.IsHeadQuarter" class="form-control">
                            <option value="">--- เลือกรายการ ---</option>
                            <option value="1">สำนักงานใหญ่</option>
                            <option value="2">สาขา</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.IsHeadQuarter"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.Branch">สาขา</label>
                        <input type="text" asp-for="CreditControl_DOM.Branch" class="form-control" />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.Branch"></span>
                    </div>
                </div>
            </div>

            <div class="h3 my-3">ที่อยู่ตามทะเบียนการค้า</div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address1.AddressNo">เลขที่ <span class="text-danger font-weight-bold">*</span></label>
                        <input type="text" asp-for="Address1.AddressNo" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.AddressNo"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address1.Moo">หมู่</label>
                        <input type="text" asp-for="Address1.Moo" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.Moo"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address1.Soi">ซอย</label>
                        <input type="text" asp-for="Address1.Soi" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.Soi"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.Street">ถนน </label>
                        <input type="text" asp-for="Address1.Street" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.Street"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.Province">จังหวัด <span class="text-danger font-weight-bold">*</span></label>
                        <select class="form-control" asp-for="Address1.Province" asp-items="Model.ProvinceMaster">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Address1.Province"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.District">เขต/อำเภอ <span class="text-danger font-weight-bold">*</span></label>
                        <select class="form-control" asp-for="Address1.District" asp-items="Model.DistrictMaster">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Address1.District"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.SubDistrict">แขวง/ตำบล <span class="text-danger font-weight-bold">*</span></label>
                        <select class="form-control" asp-for="Address1.SubDistrict" asp-items="Model.SubDistrictMaster">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Address1.SubDistrict"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.ZipCode">รหัสไปรษณีย์ <span class="text-danger font-weight-bold">*</span></label>
                        <input type="text" asp-for="Address1.ZipCode" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.ZipCode"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.Tel">โทรศัพท์ </label>
                        <input type="text" asp-for="Address1.Tel" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.Tel"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.Fax">โทรสาร </label>
                        <input type="text" asp-for="Address1.Fax" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.Fax"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address1.Email">Email </label>
                        <input type="text" asp-for="Address1.Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address1.Email"></span>
                    </div>
                </div>
            </div>

            <div class="h3 my-3">ที่อยู่ที่สามารถติดต่อได้</div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address2.AddressNo">เลขที่</label>
                        <input type="text" asp-for="Address2.AddressNo" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.AddressNo"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address2.Moo">หมู่</label>
                        <input type="text" asp-for="Address2.Moo" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.Moo"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address2.Soi">ซอย</label>
                        <input type="text" asp-for="Address2.Soi" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.Soi"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.Street">ถนน </label>
                        <input type="text" asp-for="Address2.Street" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.Street"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.Province">จังหวัด</label>
                        <select class="form-control" asp-for="Address2.Province" asp-items="Model.ProvinceMaster">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Address2.Province"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.District">เขต/อำเภอ</label>
                        <select class="form-control" asp-for="Address2.District" asp-items="Model.DistrictMaster">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Address2.District"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.SubDistrict">แขวง/ตำบล</label>
                        <select class="form-control" asp-for="Address2.SubDistrict" asp-items="Model.SubDistrictMaster">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Address2.SubDistrict"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.ZipCode">รหัสไปรษณีย์</label>
                        <input type="text" asp-for="Address2.ZipCode" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.ZipCode"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.Tel">โทรศัพท์</label>
                        <input type="text" asp-for="Address2.Tel" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.Tel"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.Fax">โทรสาร </label>
                        <input type="text" asp-for="Address2.Fax" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.Fax"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Address2.Email">Email </label>
                        <input type="text" asp-for="Address2.Email" class="form-control" />
                        <span class="text-danger" asp-validation-for="Address2.Email"></span>
                    </div>
                </div>
            </div>

            <div class="h3 my-3">ที่อยู่รายละเอียดของส่วนงานขาย</div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.SaleEmployeeId">พนักงานขาย</label> <span style="cursor: pointer;" class="badge badge-info" id="selectEmployee"><i class="fa fa-search"></i> ค้นหา</span>
                        <input type="hidden" asp-for="CreditControl_DOM.SaleEmployeeId" class="form-control" />
                        <input type="text" asp-for="SaleName" class="form-control" readonly />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.SaleEmployeeId"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.SaleZone">เขตการขาย</label>
                        <input type="text" asp-for="CreditControl_DOM.SaleZone" class="form-control" />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.SaleZone"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.DimensionNo">Dimension No.</label>
                        <input type="text" asp-for="CreditControl_DOM.DimensionNo" class="form-control" />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.DimensionNo"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.DiscountByConstant">ส่วนลดการค้าตายตัว (%)</label>
                        <input type="text" asp-for="CreditControl_DOM.DiscountByConstant" class="form-control" />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.DiscountByConstant"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.DiscountByStep">ส่วนลดการค้าเป็นขั้น (%)</label>
                        <input type="text" asp-for="CreditControl_DOM.DiscountByStep" class="form-control" />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.DiscountByStep"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.PaymentMethod">เงื่อนไขการชำระเงิน</label>

                        <table width="100%">
                            @foreach (var item in Model.PaymentMethodList)
                            {
                                <tr>
                                    @if (Model.PaymentMethodTransSelected.Any(x => x.PaymentMethodId == item.Id))
                                    {
                                        <td>
                                            <label>
                                                <input type="checkbox" name="PaymentMethod" value="@item.Id" checked /> @item.MethodName
                                            </label>
                                        </td>
                                        <td>
                                            @{
                                                var t = Model.PaymentMethodTransSelected.Where(x => x.PaymentMethodId == item.Id).FirstOrDefault();
                                            }
                                            <input type="text" name="PaymentMethodText[]" value="@t.Remark" class="form-control" />
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <label>
                                                <input type="checkbox" name="PaymentMethod" value="@item.Id" /> @item.MethodName
                                            </label>
                                        </td>
                                        <td>
                                            <input type="text" name="PaymentMethodText[]" class="form-control" />
                                        </td>
                                    }

                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="CreditControl_DOM.TermOfDelivery">เงื่อนไขการส่งสินค้า</label>
                        <select asp-for="CreditControl_DOM.TermOfDelivery" asp-items="Model.TermOfDeliveryMaster" class="form-control">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.TermOfDelivery"></span>
                    </div>

                    <div class="form-group">
                        <input type="text" asp-for="CreditControl_DOM.TermOfDelivery_Other" class="form-control" placeholder="อื่นๆ" />
                        <span class="text-danger" asp-validation-for="CreditControl_DOM.TermOfDelivery_Other"></span>
                    </div>
                </div>
            </div>

            @if (Model.EditCreditLimit)
            {
                <div class="h3 my-3">รายละเอียดของส่วนงานสินเชื่อ</div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.CreditLimited">วงเงินเครดิตที่เสนอขออนุมัติ</label>
                            <input type="text" asp-for="CreditControl_DOM.CreditLimited" class="form-control" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.CreditRating">Credit Rating</label>
                            <input type="text" asp-for="CreditControl_DOM.CreditRating" class="form-control" />
                            <span class="text-danger" asp-validation-for="CreditControl_DOM.CreditRating"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.GuaranteeDOM_Check">หลักประกัน</label>
                            <select asp-for="CreditControl_DOM.GuaranteeDOM_Check" class="form-control">
                                <option value="">--- เลือกรายการ ---</option>
                                <option value="1">B/G</option>
                                <option value="2">Other</option>
                            </select>
                            <span class="text-danger" asp-validation-for="CreditControl_DOM.GuaranteeDOM_Check"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.GuaranteeDOM_BGTotal">จำนวน</label>
                            <input type="text" asp-for="CreditControl_DOM.GuaranteeDOM_BGTotal" class="form-control" />
                            <span class="text-danger" asp-validation-for="CreditControl_DOM.GuaranteeDOM_BGTotal"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.GuaranteeDOM_IssueDate">Issue Date</label>
                            <input type="text" asp-for="CreditControl_DOM.GuaranteeDOM_IssueDate" class="form-control" />
                            <span class="text-danger" asp-validation-for="CreditControl_DOM.GuaranteeDOM_IssueDate"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.GuaranteeDOM_ExpireDate">Expire Date</label>
                            <input type="text" asp-for="CreditControl_DOM.GuaranteeDOM_ExpireDate" class="form-control" />
                            <span class="text-danger" asp-validation-for="CreditControl_DOM.GuaranteeDOM_ExpireDate"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.GuaranteeDOM_Other">Other</label>
                            <input type="text" asp-for="CreditControl_DOM.GuaranteeDOM_Other" class="form-control" />
                            <span class="text-danger" asp-validation-for="CreditControl_DOM.GuaranteeDOM_Other"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="CreditControl_DOM.TermOfPayment">ระยะเวลาสินเชื่อ</label>
                            <input type="hidden" name="PaymentTermType" />
                            <select asp-for="CreditControl_DOM.TermOfPayment" asp-items="Model.PaymentTermMaster" class="form-control">
                                <option value="">--- เลือกรายการ ---</option>
                            </select>
                            <span class="text-danger" asp-validation-for="CreditControl_DOM.TermOfPayment"></span>
                        </div>
                    </div>
                </div>
            }

            <div class="h3 my-3">เอกสารที่ลูกค้าต้องนำส่ง (ต้นฉบับ หรือ สำเนาภาพถ่ายเอกสาร)</div>

            <div class="row mb-3">
                <div class="col-12">
                    <label>
                        <input type="checkbox" asp-for="FileCheck_1" />
                        <span>1.หนังสือแสดงความจำนงขอเป็นผู้จัดจำหน่ายผลิตภัณฑ์</span>
                    </label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label>
                        <input type="checkbox" asp-for="FileCheck_2" />
                        <span>2.หนังสือสัญญาซื้อขายและจัดจำหน่าย</span>
                    </label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label>
                        <input type="checkbox" asp-for="FileCheck_3" />
                        <span>3. หนังสือมอบอำนาจให้ Ship To พร้อมเอกสารพิสูจน์ตัวตนของลูกจ้าง</span>

                    </label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label>
                        <input type="checkbox" asp-for="FileCheck_4"/>
                        4.หนังสือรับรองการจดทะเบียนนิติบุคคล ออกให้ไม่เกิน 3 เดือน (กรมพัฒนาธุรกิจการค้า)
                    </label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
                    <label>
                        <input type="checkbox" asp-for="FileCheck_5"/>
                        5. ใบทะเบียนพาณิชย์ (กรมพัฒนาธุรกิจการค้า)
                    </label>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12">
