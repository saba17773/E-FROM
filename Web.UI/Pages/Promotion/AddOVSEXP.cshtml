                                <select asp-for="Promotion_OVS.GetPoint" class="form-control">
                                    <option value="">--- เลือกรายการ ---</option>
                                    <option value="1">ได้รับคะแนนสะสม</option>
                                    <option value="0">ไม่ได้รับคะแนนสะสม</option>
