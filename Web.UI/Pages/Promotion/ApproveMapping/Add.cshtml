@page
@model Web.UI.Pages.Promotion.ApproveMapping.AddModel

@using Infrastructure.Models

@{
    ViewData["Title"] = "Approve Mapping";

    ViewData["Breadcrumb"] = new List<BreadcrumbModel> {
        new BreadcrumbModel { Text = "E-Form", Link = "javascript:void();" },
        new BreadcrumbModel { Text = "Promotion Discount", Link = "/Promotion" },
        new BreadcrumbModel { Text = "Approve Mapping", Link = "/Promotion/ApproveMapping" },
        new BreadcrumbModel { Text = "Add" }
    };
}


<div class="card">
    <div class="card-header">
        Add Approve Mapping
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="ApproveMapping.CCType">Name</label>
                        <input type="text" asp-for="ApproveMapping.CCType" class="form-control" />
                        <span class="text-danger" asp-validation-for="ApproveMapping.CCType"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ApproveMapping.ApproveMasterId">ApproveMaster</label>
                        <select asp-for="ApproveMapping.ApproveMasterId" asp-items="Model.ApproveMappingApproveMaster" class="form-control">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="ApproveMapping.ApproveMasterId"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ApproveMapping.CreateBy">User</label>
                        <select asp-for="ApproveMapping.CreateBy" asp-items="Model.ApproveMappingUserMaster" class="form-control">
                            <option value="">--- เลือกรายการ ---</option>
                        </select>
                        <span class="text-danger" asp-validation-for="ApproveMapping.CreateBy"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ApproveMapping.TypeProduct">Type Product</label>
                        <select asp-for="ApproveMapping.TypeProduct" class="form-control">
                            <option value="">--- เลือกรายการ ---</option>
                            <option value="DOM">DOM</option>
                            <option value="OVS">OVS</option>
                            <option value="DOM Excep">DOM Excep.</option>
                            <option value="OVS Excep">OVS Excep.</option>
                        </select>
                        <span class="text-danger" asp-validation-for="ApproveMapping.TypeProduct"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">
                            <i class="fa fa-check"></i>
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>