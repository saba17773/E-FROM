            <td colspan="8">
                <hr>
            </td>
        </tr>
        <tr>
            <td colspan="8">
                <b>ประมาณการ</b><br>
                <table class="table table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">รายละเอียด</th>
                            <th scope="col">ยอดขายปัจจุบัน</th>
                            <th scope="col">ยอดขายประมาณการ</th>
                            <th scope="col">เปลี่ยนแปลง (%)</th>
                            <th scope="col">หมายเหตุ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">ยอดขาย(บาท)</th>
                            <td>@String.Format("{0:n}",Model.Promotion_DOM.SalesPresentBath)</td>
                            <td>@String.Format("{0:n}",Model.Promotion_DOM.SalesForecastBath)</td>
                            <td>@Model.Promotion_DOM.SalesChangeBath</td>
                            <td>@Model.Promotion_DOM.SalesRemarkBath</td>
                        </tr>
                        <tr>
                            <th scope="row">ยอดขาย(เส้น)</th>
                            <td>@Convert.ToDecimal(Model.Promotion_DOM.SalesPresentQty).ToString("#,###")</td>
                            <td>@Convert.ToDecimal(Model.Promotion_DOM.SalesForecastQty).ToString("#,###")</td>
                            <td>@Model.Promotion_DOM.SalesChangeQty</td>
                            <td>@Model.Promotion_DOM.SalesRemarkQty</td>
                        </tr>
