                            <td>@String.Format("{0:n}",Model.Promotion_DOM.BudgetPresent)</td>
                            <td>@String.Format("{0:n}",Model.Promotion_DOM.BudgetForecast)</td>
                            <td>@Model.Promotion_DOM.BudgetChange</td>
                            <td>@Model.Promotion_DOM.BudgetRemark</td>
