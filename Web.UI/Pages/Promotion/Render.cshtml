                    <td width="10%"><input type="checkbox" checked> BIAS ON</td>
                }
                else
                {
                    <td width="10%"><input type="checkbox"> BIAS ON</td>
                }

                @if (@Model.Promotion_DOM.TypeOfProduct == 4)
